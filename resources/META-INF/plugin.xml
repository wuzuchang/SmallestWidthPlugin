<idea-plugin>
  <id>com.wzc.sw.plugin</id>
  <name>SmallestWidth Plug-in</name>
  <version>1.0.1</version>
  <vendor email="wuzuchang1994@gmail.com" url="https://github.com/wuzuchang/SmallestWidthPlugin">吴祖昌</vendor>

  <description><![CDATA[
      SmallestWidth Plug-in.<br>
      <em>Can automatic generation values-sw<N>dp folder and dimens.xml file<br>
      </em>
    ]]></description>

  <change-notes><![CDATA[
      SmallestWidth Plug-in v1.0.1.<br>
      <em>1.First version 1.0.0<br>
      2.Latest version 1.0.1<br>
      Fix a new dimes.xml file if there is no dimes.xml file under values folder<br>
      Fix if dimens.xml file exists and dimens.xml is generated using the plugin, dimen node name is modified at the same time, if not added<br>
      </em>
    ]]></change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="SmallestWidthPlugin.SmallestWidthAction" class="com.wzc.smallestwidth.SmallestWidthAction"
            text="SmallestWidth" description="SmallestWidthPlugin automatic generation  values-sw&lt;N&gt;dp folder">
      <add-to-group group-id="ToolsMenu" anchor="first"/>
      <keyboard-shortcut keymap="$default" first-keystroke="alt P"/>
    </action>
  </actions>

  <depends>com.intellij.modules.java</depends>
</idea-plugin>