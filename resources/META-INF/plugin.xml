<idea-plugin>
  <id>com.wzc.sw.plugin</id>
  <name>SmallestWidth Plug-in</name>
  <version>1.0.1</version>
  <vendor email="wuzuchang1994@gmail.com" url="https://github.com/wuzuchang/SmallestWidthPlugin">吴祖昌</vendor>

  <description><![CDATA[
      SmallestWidth Plug-in.<br>
      <em>自动生成values-sw<N>dp文件夹及dimens.xml文件<br>
      </em>
    ]]></description>

  <change-notes><![CDATA[
      SmallestWidth插件1.0.0版本.<br>
      <em>1.初始版本V1.0.0<br>
      2.当前版本V1.0.1<br>
      修复values文件夹下沒有dimes.xml文件的情况新建dimes.xml<br>
      修复如果dimes.xml文件存在使用插件生成dimens.xml，dimen节点name相同时修改，没有时新增<br>
      </em>
    ]]></change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="SmallestWidthPlugin.SmallestWidthAction" class="com.wzc.smallestwidth.SmallestWidthAction"
            text="SmallestWidth" description="SmallestWidthPlugin automatic generation  values-sw&lt;N&gt;dp folder">
      <add-to-group group-id="ToolsMenu" anchor="first"/>
      <keyboard-shortcut keymap="$default" first-keystroke="alt P"/>
    </action>
  </actions>

  <depends>com.intellij.modules.java</depends>
</idea-plugin>